<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Haulmont">
        <addColumn tableName="CONTRACT">
            <column name="NUMBER_" type="BIGINT"/>
        </addColumn>

        <addNotNullConstraint columnName="NUMBER_" defaultNullValue="0" tableName="CONTRACT"/>
    </changeSet>
    <changeSet id="2" author="Haulmont">
        <dropColumn columnName="DATE_END" tableName="CONTRACT"/>
    </changeSet>
    <changeSet id="3" author="Haulmont">
        <addColumn tableName="CONTRACT">
            <column name="DATE_END" type="DATE">
                <constraints nullable="false" validateNullable="true"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="4" author="Haulmont">
        <addNotNullConstraint columnDataType="DECIMAL(19, 2)" columnName="SUM_INSURED" tableName="CONTRACT"
                              validate="true"/>
    </changeSet>
</databaseChangeLog>