<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Haulmont">
        <addColumn tableName="CONTRACT">
            <column name="DATE_END" type="DATETIME"/>
        </addColumn>

        <addNotNullConstraint columnName="DATE_END" defaultNullValue="now()" tableName="CONTRACT"/>
    </changeSet>
    <changeSet id="2" author="Haulmont">
        <addColumn tableName="CONTRACT">
            <column name="DATE_START" type="DATETIME"/>
        </addColumn>

        <addNotNullConstraint columnName="DATE_START" defaultNullValue="now()" tableName="CONTRACT"/>
    </changeSet>
    <changeSet id="3" author="Haulmont">
        <dropColumn columnName="data_conclusion" tableName="contract"/>

        <dropColumn columnName="validity" tableName="contract"/>
    </changeSet>
</databaseChangeLog>